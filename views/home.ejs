        }
        .nav-button {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .nav-button::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 0;
            background-color: #059669;
            transition: all 0.3s ease;
            z-index: -1;
        }
        .nav-button:hover::after {
            height: 100%;
        }
        .social-link {
            transition: all 0.3s ease;
        }
        .social-link:hover {
            color: #34D399;
            transform: translateY(-2px);
        }
        .brand-title {
            position: relative;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
        .brand-title .urban {
            font-family: 'Russo One', sans-serif;
            background: linear-gradient(135deg, #047857, #059669);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
            padding: 0 4px;
            animation: urbanPulse 3s ease-in-out infinite;
        }
        .brand-title .urban::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, #059669, transparent);
            animation: urbanLine 3s ease-in-out infinite;
        }
        .brand-title .greenspace {
            font-family: 'Righteous', cursive;
            background: linear-gradient(90deg, #047857, #059669, #10B981, #34D399);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            animation: gradientFlow 3s linear infinite;
            background-size: 200% auto;
            letter-spacing: 0.5px;
        }
        @keyframes urbanPulse {
            0%, 100% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.05);
                opacity: 0.9;
            }
        }
        @keyframes urbanLine {
            0%, 100% {
                transform: scaleX(0.3);
                opacity: 0.3;
            }
            50% {
                transform: scaleX(1);
                opacity: 1;
            }
        }
        @keyframes gradientFlow {
            0% {
                background-position: 0% center;
            }
            100% {
                background-position: 200% center;
            }
        }
